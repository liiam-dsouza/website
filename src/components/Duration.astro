---
import Date from "./Date.astro"

interface Props {
    start: Date
    end: Date | null
    current?: boolean
}

const { start, end, current } = Astro.props as Props

const startYear = start.getUTCFullYear()
const endYear = end ? end.getUTCFullYear() : null
---

{
    startYear == endYear ? startYear : (
        <>
            <Date
                date={start}
                options={{
                    year: "numeric",
                    month: "short",
                }}
            />
        â€“{" "}
        { !current && end ?
            (
                <Date
                    date={end}
                    options={{
                        year: "numeric",
                        month: "short",
                    }}
                />
            )
        : "Present" }
        </>
    )
}
