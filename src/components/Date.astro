---
interface Props {
    date: Date
    options ?: Intl.DateTimeFormatOptions
}

const { date, options } = Astro.props as Props
---

<time datetime={ date.toISOString() } class="text-sm">
    {
        date.toLocaleDateString(undefined, {
            ...options,
            timeZone: "UTC",
        })
    }
</time>
