---
import Tag from "./Tag.astro"
import Link from "./Link.astro"

const projects = [
  {
    id: 1,
    title: "Custom Ghostty Terminal",
    description: "My customised install of Ghostty terminal. Contains some useful plugins using Zinit and configs for other CLI tools.",
    tags: ["Zsh", "Zinit", "Shell Scripting", "Ghostty"],
    link: "#",
  },
  {
    id: 2,
    title: "Doc Conv",
    description: "A markdown document converter CLI tool built using Pandoc. Converts markdown to various formats including PDF, DOCX.",
    tags: ["Pandoc", "Shell Scripting", "CLI"],
    link: "https://github.com/liiam-dsouza/doc-conv",
  },
  {
    id: 3,
    title: "Pawpedia",
    description: "A pet tracking and care app built as part of a group for the unit CAB302 - Agile Software Engineering at QUT.",
    tags: ["Java", "Maven", "JUnit", "JavaFX", "CI/CD"],
    link: "https://github.com/liiam-dsouza/PawPedia",
  },
  {
    id: 3,
    title: "Visual Studio Code Config",
    description: "A curated set of extensions, UI tweaks and settings for Visual Studio Code to enhance productivity and coding experience.",
    tags: ["VSCode", "Extensions", "Settings", "Custom UI"],
    link: "#",
  },
  {
    id: 3,
    title: "Neovim Config",
    description: "A highly customised Neovim configuration with various plugins and settings for an optimal coding experience.",
    tags: ["Neovim", "Lua", "Vimscript", "Lazyvim", "Plugins"],
    link: "#",
  },
]
---

<section id="projects">
    <h2 class="mb-8 text-3xl font-medium">ðŸ”§ Projects</h2>
    <div class="mx-auto max-w-6xl">
        <div class="grid gap-8 md:grid-cols-2">
            {
                projects.sort((a, b) => a.title.localeCompare(b.title)).map((project) => (
                    <div class="group rounded-lg border border-neutral-300 p-6 transition-colors hover:border-primary">
                        <div class="mb-4">
                            <h3 class="mb-2 text-lg font-semibold">{ project.title }</h3>
                            <p class="text-sm text-muted-foreground">{ project.description }</p>
                        </div>

                        <div class="mb-4 flex flex-wrap gap-2">
                            { project.tags.sort().map((tag) => (
                                <Tag text={ tag } />
                            ))}
                        </div>
                        { project.link && (
                            <Link url={ project.link } text="View Project" icon={{ name: "arrow-big-right-lines", side: "right"   }} target="_blank" />
                        )}
                    </div>
                ))
            }
        </div>
    </div>
</section>
