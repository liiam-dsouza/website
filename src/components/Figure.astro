---
import Image from './Image.astro'

interface Props {
    src: string
    alt: string
    caption?: string
}

const { src, alt, caption = "" } = Astro.props
---

<figure class="my-10 flex flex-col items-center">
    <Image
        src={ src }
        alt={ alt }
    />
    <figcaption class="mt-3 text-sm text-neutral-500 text-center max-w-2xl">
        { caption }
    </figcaption>
</figure>
