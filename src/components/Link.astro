---
import { Icon } from "astro-icon/components"

interface Props {
    url: string
    text: string
    icon?: {
        name: string,
        side: "left" | "right"
    },
    class?: string
    [key: string]: any
    animated?: boolean
}

const { url, text, icon, animated, class: extra, ...rest } = Astro.props

const animate = animated ? "hover:gap-3" : ""

const classes = `inline-flex max-w-max items-center gap-2 text-primary ${ animate } transition-all ${extra ?? ""}`
---

<a
    href={ url }
    rel="noopener noreferrer"
    class={ classes }
    {...rest}
>
    { icon && icon.side === 'left' && (
        <Icon name={ `tabler:${icon.name}` } />
    ) }
    { text }
    { icon && icon.side === 'right' && (
        <Icon name={ `tabler:${icon.name}` } />
    ) }
</a>
