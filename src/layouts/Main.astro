---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
    title?: string
    description?: string
}

const { title, description } = Astro.props
---

<html lang="en">
	<head>
		<BaseHead title={title || "Liam D'Souza"} description={description || "Liam D'Souza's personal website"} />
	</head>
	<body class="md:px-48 p-4 md:p-0 min-h-screen flex flex-col items-center">
        <Header />
        <main class="grow">
            <slot />
        </main>
        <Footer />
	</body>
</html>
