        </p>

        <div class="grid md:grid-cols-3 gap-4 my-2">
            {
                learningPaths.map((path) => {
                    return (
                        <div class="flex flex-col border border-neutral-200 hover:border-primary rounded-2xl p-4 hover:-translate-y-1 hover:scale-[1.01] hover:shadow-black/10 hover:shadow-lg transition-all duration-200 ease-in-out cursor-default">
                            <article>
                                <h3 class="text-xl font-medium">{ path.data.title }</h3>
                                <p class="mt-2">
                                    { path.data.description }
                                </p>
                                <div class="mt-4">
                                    <Link url={ `/resources/${ path.id }` } text="Explore learning path" icon={{ name: "arrow-big-right-lines", side: "right"   }} animated />
                                </div>

                                <div class="mt-4 flex flex-wrap gap-2">
                                    {
                                        sortTags(formatTags(path.data.tags)).map((tag) => (
                                            <Tag>{ `${ tag }` }</Tag>
                                        ))
                                    }
                                </div>
                            </article>
                        </div>
                    )
                })
            }
        </div>
    </section>

